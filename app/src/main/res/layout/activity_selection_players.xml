<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Selection_players">

    <TextView
        android:id="@+id/editTextTextPersonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SÃ©lectionnez le nombre de joueurs !"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.186" />

    <Button
        android:id="@+id/button_2p"
        android:layout_width="181dp"
        android:layout_height="88dp"
        android:text="2 joueurs"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/button_4p"
        app:layout_constraintEnd_toStartOf="@+id/button_3p"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName"
        app:layout_constraintVertical_bias="0.5"
        tools:visibility="visible" />

    <Button
        android:id="@+id/button_3p"
        android:layout_width="181dp"
        android:layout_height="88dp"
        android:text="3 joueurs"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/button_5p"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_2p"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName"
        app:layout_constraintVertical_bias="0.5"
        tools:visibility="visible" />

    <Button
        android:id="@+id/button_4p"
        android:layout_width="181dp"
        android:layout_height="88dp"
        android:text="4 joueurs"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/button_6p"
        app:layout_constraintEnd_toStartOf="@+id/button_5p"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_2p"
        app:layout_constraintVertical_bias="0.5"
        tools:visibility="visible" />

    <Button
        android:id="@+id/button_5p"
        android:layout_width="181dp"
        android:layout_height="88dp"
        android:layout_marginEnd="8dp"
        android:text="5 joueurs"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/button_6p"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_4p"
        app:layout_constraintTop_toBottomOf="@+id/button_3p"
        app:layout_constraintVertical_bias="0.5"
        tools:visibility="visible" />

    <Button
        android:id="@+id/button_6p"
        android:layout_width="181dp"
        android:layout_height="88dp"
        android:text="6 joueurs"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.831"
        tools:visibility="visible" />

</android.support.constraint.ConstraintLayout>